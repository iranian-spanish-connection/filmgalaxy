{{#if festivalFromDB}}

  <div class="d-flex justify-content-center">

    <div class="content-body">

      <div class="card mb-4 border-0" style="max-width: 1100px;">
        <div class="row g-0">
          <div class="col-md-4">
            <img
              src="{{festivalFromDB.photos}}"
              class="img-fluid rounded-start"
              alt="..."
            />
            <img
              src="{{festivalFromDB.poster}}"
              class="img-fluid rounded-start"
              alt="..."
            />
            <br />
            <br />

            <a
              class="form-control btn btn-outline-secondary btn-sm"
              href="/profile/myfestival/edit"
            >Edit My Festival</a>
            <a
              class="form-control btn btn-outline-secondary btn-sm"
              href="/profile/myfestival/manage"
            >Manage My Festival</a>
            <form action="/profile/myfestival/remove" method="POST">
              <button
                class="form-control btn btn-outline-secondary btn-sm"
                type="submit"
              >Remove My Festival</button>
            </form>
          </div>

                {{!-- <div class="col-md-4">
