<section class="heads">
  <div><h2 class="headlines">Add a new project</h2></div>
</section>

<div class="d-flex justify-content-center">

  <div class="content-body">

    <form
      action="/profile/projects/create"
      method="POST"
      enctype="multipart/form-data"
    >

      <h2>Project Information</h2>
      <label>Project Title
        <input
          class="form-control"
          type="text"
          placeholder="Title in English"
          aria-label="default input example"
          type="text"
          name="title"
        /></label>

      <div class="form-outline w-100 mb-4">
        <label for="textAreaExample6" class="form-label">Brief Synopsis</label>
        <textarea
          placeholder="Synopsis in English"
          class="form-control"
          id="textAreaExample6"
          rows="3"
          name="synopsis"
        ></textarea>
      </div>

      <h2>Specifications</h2>
      <label>Country of Origin
        <select
          id="country"
          name="country"
          class="form-select"
          aria-label="Default select example"
        >
          <option value="" selected disabled hidden>Choose here</option>
          {{#each countryList}}
            <option value="{{this}}">{{this}}</option>
          {{/each}}
        </select>
      </label>
      <label>Original Language
        <select
          data-placeholder="Choose a Language..."
          name="language"
          class="form-select"
          aria-label="Default select example"
        >
          <option value="" selected disabled hidden>Choose here</option>
          {{#each languageList}}
            <option value="{{this}}">{{this}}</option>
          {{/each}}
        </select>
      </label>

      <label>Completion Date
        <input
          class="form-control"
          aria-label="default input example"
          type="date"
          name="completionDate"
        /></label>

      <label>Genres
        <select
          name="genre"
          class="form-select"
          aria-label="Default select example"
          size="3"
          multiple
        >
          <option value="" selected disabled hidden>Choose here</option>
          {{#each genreList}}
            <option value="{{this}}">{{this}}</option>
          {{/each}}
        </select>
      </label>
      <section>
        <label><strong>Project Type</strong>
          {{#each projectTypeList}}
            <div class="form-check">
              <input
                class="form-check-input"
                type="radio"
                id="radio{{this}}"
                name="projectType"
                value="{{this}}"
              />
              <label class="form-check-label" for="radio{{this}}">
                {{this}}
              </label>
            </div>
          {{/each}}
        </label>
      </section>

      <section name="projectlength">
        <label><strong>Project Length Category</strong>
          {{#each lengthCategoryList}}
            <div class="form-check">
              <input
                class="form-check-input"
                type="radio"
                id="radio{{this}}"
                name="projectlength"
                value="{{this}}"
              />
              <label class="form-check-label" for="radio{{this}}">
                {{this}}
              </label>
            </div>
          {{/each}}

        </label>
      </section>

      <label>Runtime
        <input
          class="form-control"
          type="number"
          name="runtime"
          min="1"
          max="300"
        />
        minutes</label>
      <h2>Credits</h2>
      <label>Director
        <input class="form-control" type="text" name="director" /></label>
      <label>Writer
        <input class="form-control" type="text" name="writer" /></label>
      <label>Cast <input class="form-control" type="text" name="cast" /></label>
      <label>Producer
        <input class="form-control" type="text" name="producer" /></label>

      <h2>Project Files</h2>
      {{! FILES }}
      <label for="poster" class="form-label">Poster
        <input
          class="form-control"
          type="file"
          id="poster"
          name="poster"
        /></label>

      <label for="photos" class="form-label">Still Photos
        <input
          class="form-control"
          type="file"
          id="photos"
          name="photos"
          multiple
        /></label>
      {{! FILES }}

      <label>Trailer
        <input class="form-control" type="text" name="trailer" /></label>
      <label>Preview
        <input class="form-control" type="text" name="preview" /></label>

      <br />
      <button class="form-control btn btn-primary" type="submit">Save Project</button>
    </form>
  </div>
</div>