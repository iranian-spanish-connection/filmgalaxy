

<div class="d-flex justify-content-center">

  <div class="content-body">

    <div class="card mb-4 border-0" style="max-width: 1100px;">
      <div class="row g-0">
        <div class="col-md-4">
          <img src="{{poster}}" class="img-fluid rounded-start" alt="..." />
          <br />
          <br />
          <br />
          <a
            class="form-control btn btn-outline-secondary btn-sm"
            href="/films"
          >Return</a>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h3 class="card-title">{{filmsFromDB.title}}</h3>
            
                <div class="video">
                    <iframe class="center" src="https://www.youtube.com/embed/{{preview}}" frameborder="0" allowfullscreen></iframe>
                </div>

            <div>
            <p class="card-text">Synopsis: {{synopsis}}</p>
            <p class="card-text">Project category:
              {{projectlength}}
              -
              {{projectType}}</p>
            <p class="card-text">Director: {{director}}</p>
            <p class="card-text">Runtime: {{runtime}} minutes</p>
            <p class="card-text">Country: {{country}}</p>
            <p class="card-text">Language: {{language}}</p>
            <p class="card-text">Genre: {{genre}}</p>
            <p class="card-text">Completion Date:
              {{formatDate "DD-MMM-YYYY" completionDate}}</p>
            <p class="card-text">Runtime: {{runtime}}</p>
            <p class="card-text">Director: {{director}}</p>
            <p class="card-text">Writer: {{writer}}</p>
            <p class="card-text">Cast: {{cast}}</p>
            <p class="card-text">Producer: {{producer}}</p>
            <p class="card-text">Trailer: {{trailer}}</p>
            <p class="card-text">Submitted in Festivals:
              {{submittedInFestivals}}</p>
          </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>