<h3>Search Festivals</h3>

<form action="" method="POST">
    <input type="text" name="search" placeholder="Search festivals" />
    <button type="submit">Search</button>
</form>

{{#each festivalsInDB}}
    <div>
        <h2>{{title}}</h2>
        <p>{{country}}</p>
        <p>Submission Deadline: {{submissionDeadline}}
    </div>
{{/each}}